<% include  ./partials/header %>

    <!--Main-->
    <main>
        <h1 class="container">Blog Index</h1>
        <!--Main container-->
        <div class="container">
            <!--Grid row-->
            <div class="row">
                <!--Grid column-->
                <% blogs.forEach(function(blog){ %>
                    <div class="col-lg-3 col-md-6 mb-4">
                        <!--Card-->
                        <div class="card">
                            <!--Card image-->
                            <div class="view overlay hm-white-slight">
                                <img src="<%= blog.image %>" class="img-fluid" alt="">
                                <a href="#">
                                    <div class="mask"></div>
                                </a>
                            </div>

                            <!--Card content-->
                            <div class="card-body">
                                <!--Title-->
                                <h4 class="card-title">
                                    <%= blog.title %>
                                </h4>
                                <!--Text-->
                                <p class="card-text">
                                    <%= blog.body.substring(0,100) %>...</p>
                                <a href="/blogs/<%= blog._id %>" class="btn btn-primary">Read More</a>
                                <p>
                                    <%= blog.created.toDateString() %>
                                </p>
                            </div>

                        </div>
                        <!--/.Card-->
                        <br>
                    </div>
                <% }) %>
            </div>
        </div>
    </main>
    <!--Main container-->
    <% include  ./partials/footer %>