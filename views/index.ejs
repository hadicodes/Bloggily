<% include  ./partials/header %>

    <h1 class="container">Blog Index</h1>

    <div class="container">
        <% blogs.forEach(function(blog){ %>
            <!--Card-->
            <div class="card">
                <!--Card image-->
                <div class="view overlay hm-white-slight">
                    <img src="<%= blog.image %>" class="img-fluid" alt="">
                    <a href="#">
                        <div class="mask"></div>
                    </a>
                </div>

                <!--Card content-->
                <div class="card-body">
                    <!--Title-->
                    <h4 class="card-title">
                        <%= blog.title %>
                    </h4>
                    <!--Text-->
                    <p class="card-text"></p>
                    <a href="/blogs/<%= blog._id %>" class="btn btn-primary">Read More</a>
                </div>

            </div>
            <!--/.Card-->
            <br>
            <% }) %>
    </div>





    <% include  ./partials/footer %>